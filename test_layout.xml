<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#030c48">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#0f6ae2"
                android:src="@drawable/ic_action_email"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="116dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_password"
                android:background="#06eac8" />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="#0fb633"
                android:src="@drawable/ic_action_name"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="116dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_name2"
                android:background="#0fe2d7" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:src="@drawable/ic_action_email"
            android:background="#ea6906" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="#e20fd4"
            android:src="@drawable/ic_action_name"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_password"
            android:layout_margin="5dp"
            android:background="#e21a0f" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_name"
                android:background="#39ca18" "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_email"
                android:background="#14dacd"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>